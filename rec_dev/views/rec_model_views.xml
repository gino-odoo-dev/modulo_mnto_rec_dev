<odoo>
    <record id="view_rec_model_form" model="ir.ui.view">
        <field name="name">rec.model.form</field>
        <field name="model">rec.model</field>
        <field name="arch" type="xml">
            <form string="Mnto Ficha Tecnica">
                <sheet>
                    <group>
                        <field name="name" style="width: 50%;"/>
                        <field name="description" style="width: 50%;"/>
                        <field name="product_id" style="width: 50%;"/>
                        <field name="temporada_id" style="width: 25%;"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="action_rec_model" model="ir.actions.act_window">
        <field name="name">Mnto Ficha Tecnica</field>
        <field name="res_model">rec.model</field>
        <field name="view_mode">form</field>
    </record>

    <menuitem id="menu_rec_model" name="Mnto Ficha Tecnica" sequence="10"/>
    <menuitem id="submenu_rec_model" name="opciones" parent="menu_rec_model" action="action_rec_model"/>
</odoo>
